<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green_2"
    android:id="@+id/multi_player_score_limit">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="@string/score_to_reach_text"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/score_up"
            android:layout_marginBottom="15dp"
            android:background="@drawable/img_direction_2"
            />
        <TextView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:id="@+id/tvScoreLimit"
            android:textSize="126sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/hollow_white_circle_thick"/>
        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/score_down"
            android:layout_marginTop="15dp"
            android:background="@drawable/img_direction_6"
            />


    </LinearLayout>

</LinearLayout>